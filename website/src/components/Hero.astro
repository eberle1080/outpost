<style lang="scss">
  .intro {
    margin-top: var(--spacing-20);
    margin-bottom: var(--spacing-20);
    display: grid;
    width: 100%;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-6);

    h1 {
      margin: 0;
      text-shadow:
        0px 8px 16px rgba(0, 0, 0, 0.32),
        0px 16px 32px rgba(0, 0, 0, 0.32);
    }

    p {
      margin: 0;
      color: var(--foreground-neutral-2);

      strong {
        font-weight: 500;
      }
    }

    .button-group {
      display: flex;
      gap: var(--spacing-4);
      margin-top: var(--spacing-9);
    }

    @media (max-width: 1064px) {
      display: flex;
      flex-direction: column;
      align-items: center;

      h1,
      p {
        text-align: center;
      }

      .button-group {
        justify-content: center;
      }
    }
  }

  .illustration-section {
    position: relative;
    &:after {
      content: "";
      position: absolute;
      top: -50%;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
          180deg,
          #141412 25.2%,
          rgba(20, 20, 18, 0.7) 100%
        ),
        linear-gradient(
          180deg,
          rgba(0, 68, 204, 0) 31.94%,
          rgba(0, 68, 204, 0.5) 100%
        ),
        url("/images/background-grid.svg");
      z-index: -1;
    }
  }

  .container {
    background-color: var(--background);
  }

  .container-illustration {
    box-shadow:
      0px -0.912px 0px 0px rgba(255, 255, 255, 0.04),
      0px 1.824px 3.647px 0px rgba(0, 0, 0, 0.32),
      0px 3.647px 7.294px 0px rgba(0, 0, 0, 0.32);
    border: 1px solid var(--outline-neutral);
    position: relative;
    z-index: 0;

    @media (max-width: 744px) {
      display: none;
    }

    img {
      max-width: 100%;
      height: auto;
      padding-left: 9.5%;
      padding-right: 9%;
      padding-bottom: 80px;
      padding-top: 136px;
      box-sizing: border-box;
      z-index: 1;
    }

    .illustration-wrapper-container {
      position: absolute;
      top: var(--spacing-4);
      left: var(--spacing-4);
      right: var(--spacing-4);
      bottom: var(--spacing-4);
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: var(--spacing-4);
      z-index: -1;
      .illustration-box {
        border: 1px dashed var(--outline-neutral);
        background-color: #171715;

        .illustration-box-heading {
          padding: var(--spacing-3);
          display: flex;
          justify-content: center;
          align-items: center;
          border-bottom: 1px dashed var(--outline-neutral);

          span {
            color: var(--foreground-neutral-3);
          }
        }
      }
    }
  }

  .container-highlight {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    border: 1px solid var(--outline-neutral);
    border-top: none;
    position: relative;

    @media (max-width: 1064px) {
      display: flex;
      flex-direction: column;
    }

    @media (max-width: 744px) {
      border-top: 1px solid var(--outline-neutral);
    }

    .container-highlight-item {
      padding: var(--spacing-6);

      h3 {
        margin: 0;
        display: flex;
        align-items: center;
        gap: var(--spacing-3);
        margin-bottom: var(--spacing-1);
      }

      p {
        margin: 0;
        color: var(--foreground-neutral-2);
      }

      &:not(:last-child) {
        border-right: 1px solid var(--outline-neutral);
        @media (max-width: 1064px) {
          border-bottom: 1px solid var(--outline-neutral);
          border-right: none;
        }
      }
    }
  }
</style>
